%h1="Listing settings"

%table{:border=>1}
  %tr
    %th="Boolean setting"
    %th="String setting"
    %th="Integer setting"
    %th="Float setting"
    %th{:colspan=>3}

  -@settings.each do |setting|
    %tr
      %td 
        = setting.boolean_setting
      %td 
        = h setting.string_setting
      %td 
        = h setting.integer_setting
      %td 
        = h setting.float_setting 
      %td 
        = link_to 'Show', setting
      %td 
        = link_to 'Edit', edit_setting_path(setting)
      %td 
        = link_to 'Destroy', setting, :confirm => 'Are you sure?', :method => :delete  
%br
= link_to 'New Setting', new_setting_path 
=link_to "Accordion", "/settings/accordion"
